{{#if addNewAnswer}}
   <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    {{input id='author' value=author type='text' class='validate'}}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    {{input id='content' value=content type='text' class='validate'}}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    {{input id='subject' value=subject type='text' class='validate'}}
                </div>
            </div>
            <button {{action 'saveAnswer'}} >Answer</button>
        </form>   
    </div> 
{{else}}
    <button {{action 'answerFormShow'}} >new answer</button>
{{/if}}