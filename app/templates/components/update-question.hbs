{{#if updateQuestion}}
    <button {{action 'updateQuestion'}} class="btn">update question</button>
    {{else}}
<div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          {{input id="author" value=question.author type="text" class=""}}
          <label for="author">Author: </label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input id="quiz" value=question.quiz type="text" class="validate"}}
          <label for="quiz">Question</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{textarea id="content" value=question.content type="text" class="materialize-textarea"}}
          <label for="content">Content</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{input id="additionalContent" value=question.additionalContent type="text" class="validate"}}
          <label for="additionalContent">Additional Content</label>
        </div>
      </div>
      <button {{action 'update' question}} >update question</button>
    </form>
  </div>
        
{{/if}}