{{#if editDevDetails}}
<form class="col s6 offset-s3">
    <div class="row center-align">
        <div class="input-field col s3">
            {{input id="first_name" type="text" class="validate" value=firstName}}
            <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s3">
            {{input id="last_name" type="text" class="validate" value=lastName}}
            <label for="last_name">Last Name</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s3">
            {{input id="email" type="email" class="validate" value=email}}
            <label for="email">Email</label>
        </div>

        <div class="input-field col s3">
            {{textarea input id="bio" type="text" class="validate" value=lastName row="3"}}
            <label for="last_name">Bio</label>
        </div>

        <div class="input-field col s3">
            {{input id="github" type="text" class="validate" value=github}}
            <label for="github_name">GitHub User Name</label>
        </div>
        <div class="input-field col s3">
            {{input id="password" type="password" class="validate" value=password}}
            <label for="github_name">password</label>
        </div>

    </div>
    <button class="btn waves-effect waves-light" type="submit" {{action 'saveChanges'}} name="action">Submit <i class="material-icons right">send</i></button>
    <button class="btn waves-effect waves-light" type="submit" {{action 'cancel'}} name="action">Cancel <i class="material-icons right">cancel</i></button>
</form>
{{else}}

<div class="container">
    <div class="fixed-action-btn">
        <a id="edit" class="btn-floating btn-large halfway-fab waves-effect waves-light red responsive" href="#modal1" {{action
            'editDevDetails'}}><i class="material-icons">edit</i></a>

    </div>
</div>
{{/if}}